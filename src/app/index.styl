@import url("http://fonts.googleapis.com/css?family=Roboto")
@import url("https://fonts.googleapis.com/icon?family=Material+Icons")

$green = #2AD5BB
$purple = #755C8A

html
  font-family 'Roboto', sans-serif




.bh-primary
  color #FFF
  background-color rgb(42,213,187)
  border-radius 10px 0 0 10px
  font-size 16px

.bh-primary:not([disabled]):hover
  color white
  background-color rgb(42,213,187)

.bh-primary[disabled]
  color white
  background-color color white

.bg-green
  background-color $green !important

.bg-purple
  background-color $purple !important


[layout=row]
  flex-direction row

.main-card
  width 80%

.booking-step
  margin 20px 0 30px

  .selected
    background-color #2ad5bb
    width 300px
    padding 10px
    margin 10px auto
    text-align center

.capitalize
  text-transform capitalize

.uppercase
  text-transform uppercase

.faces-img
  border-radius 50%
  width 80px

.faces-icon
  font-size 80px
  color white
  background black
  border-radius 50%

.type-active
  .faces-icon
    background blue


.p-title
  text-transform uppercase
  text-align center
  margin 20px 0
  font-size 20px

.doctors-name
  text-transform uppercase

.centered-text
  text-align center





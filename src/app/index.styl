@import url("http://fonts.googleapis.com/css?family=Roboto")
@import url("https://fonts.googleapis.com/icon?family=Material+Icons")

html
  font-family 'Roboto', sans-serif

[layout=row]
  flex-direction row

.main-card
  width 80%

.booking-step
  margin 20px 0 30px

.capitalize
  text-transform capitalize

.faces-img
  border-radius 50%
  width 80px

.faces-icon
  font-size 80px
  color white
  background black
  border-radius 50%

.type-active
  .faces-icon
    background blue


.p-title
  text-transform uppercase
  text-align center
  margin 20px 0
  font-size 20px

.centered-text
  text-align center




